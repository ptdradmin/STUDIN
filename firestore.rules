
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    // ============================================
    // USERS - Public read, Owner write
    // ============================================
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      // Allow user to create their own profile document if the user ID matches
      allow create: if request.auth.uid == userId;
      // Allow user to update/delete their own profile
      allow update, delete: if isOwner(userId);
      
      match /favorites/{favoriteId} {
        allow read, write: if isOwner(userId);
      }

      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
      
      match /assignments/{assignmentId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // ============================================
    // POSTS - Signed-in read, Owner write
    // ============================================
    match /posts/{postId} {
      allow read, list: if isSignedIn();
      allow create, update: if request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth.uid == resource.data.userId;
    }
    
    // ============================================
    // REELS - Signed-in read, Owner write
    // ============================================
    match /reels/{reelId} {
      allow read: if isSignedIn();
      allow create, update: if request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth.uid == resource.data.userId;
    }

    // ============================================
    // HOUSINGS - Public read, Owner write
    // ============================================
    match /housings/{housingId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // CARPOOLINGS - Public read, Driver write
    // ============================================
    match /carpoolings/{carpoolId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.driverId == request.auth.uid;
      allow update: if (isSignedIn() && resource.data.driverId == request.auth.uid) || 
                       (isSignedIn() && request.resource.data.passengerIds == resource.data.passengerIds.concat([request.auth.uid]));
      allow delete: if isSignedIn() && resource.data.driverId == request.auth.uid;

      // Bookings subcollection
      match /carpool_bookings/{bookingId} {
          allow create: if isSignedIn(); // User must be signed in to book
          allow read, update, delete: if isSignedIn() && (request.auth.uid == resource.data.passengerId || exists(/databases/$(database)/documents/carpoolings/$(carpoolId)) && request.auth.uid == get(/databases/$(database)/documents/carpoolings/$(carpoolId)).data.driverId);
      }
    }
    
    // ============================================
    // TUTORINGS - Public read, Tutor write
    // ============================================
    match /tutorings/{tutoringId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.tutorId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.tutorId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.tutorId == request.auth.uid;
    }

    // Reviews for tutors
     match /tutoring_reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && request.auth.uid == resource.data.studentId;
    }
    
    // ============================================
    // EVENTS - Public read, Organizer write
    // ============================================
    match /events/{eventId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && request.resource.data.organizerId == request.auth.uid;
      allow update: if (isSignedIn() && resource.data.organizerId == request.auth.uid) || 
                       (isSignedIn() && request.resource.data.attendeeIds == resource.data.attendeeIds.concat([request.auth.uid]));
      allow delete: if isSignedIn() && resource.data.organizerId == request.auth.uid;
    }

    match /event_attendees/{attendeeId} {
        allow read, write: if isSignedIn();
    }
    
    // ============================================
    // BOOKS - Public read, Seller write
    // ============================================
    match /books/{bookId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.sellerId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.sellerId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.sellerId == request.auth.uid;
    }

    // ============================================
    // CHALLENGES - Public read, Admin/Partner write
    // ============================================
    match /challenges/{challengeId} {
      allow get: if true;
      allow list: if true;
      // Only allow creation/update if user has 'institution' or 'admin' role
      allow write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['institution', 'admin'];

       match /submissions/{submissionId} {
         allow read: if isSignedIn();
         // A user can only submit for themselves.
         allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
         // The challenge creator can update the status
         allow update: if isSignedIn() && get(/databases/$(database)/documents/challenges/$(challengeId)).data.creatorId == request.auth.uid;
         // Only the user who submitted or the challenge creator can delete.
         allow delete: if isSignedIn() && (request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/challenges/$(challengeId)).data.creatorId == request.auth.uid);
       }
    }
    
    // ============================================
    // CONVERSATIONS & MESSAGES
    // ============================================
    match /conversations/{conversationId} {
      allow read, update: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participantIds;
      allow delete: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      
      match /messages/{messageId} {
        allow read: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
        allow create: if isSignedIn() && request.auth.uid == request.resource.data.senderId;
        allow delete: if isSignedIn() && request.auth.uid == resource.data.senderId;
        allow update: if false;
      }
    }
  }
}
