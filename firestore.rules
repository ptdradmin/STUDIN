
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // --------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------
    /**
     * Checks if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }
    /**
     * Checks if the currently authenticated user's UID matches the provided userId.
     * This is the core of the ownership-based security model.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    /**
     * Checks if the user is the owner of an EXISTING document.
     * Used for safe update and delete operations.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
    
    /**
     * Validates that the creatorId field of a new document matches the owner's UID.
     */
    function isCreatingOwnResource(ownerIdField) {
      return request.resource.data[ownerIdField] == request.auth.uid;
    }
    /**
     * Enforces immutability of an ownership field on update.
     */
    function ownerFieldIsImmutable(ownerIdField) {
      return request.resource.data[ownerIdField] == resource.data[ownerIdField];
    }
    
    // --------------------------------------------------------------------
    // User Profiles
    // --------------------------------------------------------------------
    /**
     * @description Manages user profile documents.
     * @path /users/{userId}
     * @allow (get, update, delete) A user can manage their own profile.
     * @allow (create) A new user can create their own profile document during registration.
     * @deny (list) Another user cannot list all user profiles.
     * @deny (get) Another user cannot read a user's private profile.
     * @principle Restricts access to a user's own data tree and prevents user enumeration.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      // FIXED: Allow creation during registration
      allow create: if isSignedIn() && request.auth.uid == userId && request.resource.data.id == userId;
      allow update: if isOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
      // --- User Subcollections ---
      /**
       * @description Manages housing listings created by a user.
       * @path /users/{userId}/housing/{housingId}
       * @allow (all) A user can manage their own housing listings.
       * @deny (all) Another user cannot access or manage these listings.
       * @principle Enforces document ownership within a user's private data tree.
       */
      match /housing/{housingId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && isCreatingOwnResource('userId');
        allow update: if isExistingOwner(userId) && ownerFieldIsImmutable('userId');
        allow delete: if isExistingOwner(userId);
      }
      
      /**
       * @description Manages carpooling opportunities created by a user.
       * @path /users/{userId}/carpooling/{carpoolingId}
       * @allow (all) A user can manage their own carpooling offers.
       * @deny (all) Another user cannot access or manage these offers.
       * @principle Enforces document ownership within a user's private data tree.
       */
      match /carpooling/{carpoolingId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && isCreatingOwnResource('driverId');
        allow update: if isExistingOwner(userId) && ownerFieldIsImmutable('driverId');
        allow delete: if isExistingOwner(userId);
      }
      /**
       * @description Manages tutoring offers created by a user.
       * @path /users/{userId}/tutoring/{tutoringId}
       * @allow (all) A user can manage their own tutoring offers.
       * @deny (all) Another user cannot access or manage these offers.
       * @principle Enforces document ownership within a user's private data tree.
       */
      match /tutoring/{tutoringId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && isCreatingOwnResource('tutorId');
        allow update: if isExistingOwner(userId) && ownerFieldIsImmutable('tutorId');
        allow delete: if isExistingOwner(userId);
      }
      /**
       * @description Manages events created by a user.
       * @path /users/{userId}/events/{eventId}
       * @allow (all) A user can manage their own events.
       * @deny (all) Another user cannot access or manage these events.
       * @principle Enforces document ownership within a user's private data tree.
       */
      match /events/{eventId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && isCreatingOwnResource('organizerId');
        allow update: if isExistingOwner(userId) && ownerFieldIsImmutable('organizerId');
        allow delete: if isExistingOwner(userId);
      }
      /**
       * @description Manages a user's favorited items.
       * @path /users/{userId}/favorites/{favoriteId}
       * @allow (all) A user can manage their own list of favorites.
       * @deny (all) Another user cannot access another's favorites.
       * @principle Enforces document ownership within a user's private data tree.
       */
      match /favorites/{favoriteId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && isCreatingOwnResource('userId');
        allow update: if isExistingOwner(userId) && ownerFieldIsImmutable('userId');
        allow delete: if isExistingOwner(userId);
      }
    }
    // --------------------------------------------------------------------
    // Institutions
    // --------------------------------------------------------------------
    /**
     * @description Manages institution profile documents.
     * @path /institutions/{institutionId}
     * @allow (get, update, delete) An institution can manage their own profile.
     * @allow (create) A new institution can create their own profile document during registration.
     * @deny (list) Another user cannot list all institutions.
     * @principle Restricts access to an institution's own data tree.
     */
    match /institutions/{institutionId} {
      allow get: if isOwner(institutionId);
      allow list: if false;
      // FIXED: Allow creation during registration
      allow create: if isSignedIn() && request.auth.uid == institutionId && request.resource.data.id == institutionId;
      allow update: if isOwner(institutionId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(institutionId);
    }
    // --------------------------------------------------------------------
    // Messages
    // --------------------------------------------------------------------
    /**
     * Checks if the authenticated user is the sender or receiver of a message.
     */
    function isParticipantInMessage() {
      return isSignedIn() && (request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.receiverId);
    }
    /**
     * Checks if the authenticated user is the sender of a new message.
     */
    function isSender() {
      return isSignedIn() && request.resource.data.senderId == request.auth.uid;
    }
    /**
     * @description Manages private messages between users.
     * @path /messages/{messageId}
     * @allow (get) A user can read a message if they are the sender or receiver.
     * @allow (create) A user can send a message.
     * @deny (list) A user cannot list all messages in the database.
     * @deny (update, delete) Messages are immutable and cannot be changed or deleted.
     * @principle Secures access based on denormalized fields within the document itself.
     */
    match /messages/{messageId} {
      allow get: if isParticipantInMessage();
      allow list: if false;
      allow create: if isSender() && request.resource.data.receiverId != request.auth.uid;
      allow update: if false;
      allow delete: if false;
    }
  }
}
