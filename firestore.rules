
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================================
    // Helper Functions
    // =====================================================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    function isRole(userId, role) {
      return getUserRole(userId) == role;
    }
    
    function isChallengeCreator(challengeId) {
        let challenge = get(/databases/$(database)/documents/challenges/$(challengeId));
        return request.auth.uid == challenge.data.creatorId;
    }

    function isResourceOwner(doc) {
      return isSignedIn() && request.auth.uid == doc.userId;
    }
    
    function isBookSeller(doc) {
        return isSignedIn() && request.auth.uid == doc.sellerId;
    }
    
    function isDriver(carpoolingId) {
      return isSignedIn() && get(/databases/$(database)/documents/carpoolings/$(carpoolingId)).data.driverId == request.auth.uid;
    }

    function isEventOrganizer(eventId) {
      return isSignedIn() && get(/databases/$(database)/documents/events/$(eventId)).data.organizerId == request.auth.uid;
    }

    // =====================================================================
    // User Profile Rules
    // =====================================================================
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || 
                      (isSignedIn() && (
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['followerIds']) ||
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['followingIds'])
                      ));
      allow delete: if isOwner(userId);
      
      match /notifications/{notificationId} {
        allow read, update: if isOwner(userId);
        allow create: if isSignedIn();
        allow delete: if isOwner(userId);
      }
      
      match /favorites/{favoriteId} {
        allow read, write: if isOwner(userId) && request.resource.data.userId == userId;
        allow list: if isOwner(userId);
      }
    }

    // =====================================================================
    // Institutions Rules
    // =====================================================================
    match /institutions/{institutionId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // =====================================================================
    // Book Exchange Rules
    // =====================================================================
    match /books/{bookId} {
      allow read, list: if true;
      allow create: if isSignedIn() && request.resource.data.sellerId == request.auth.uid;
      allow update, delete: if isBookSeller(resource.data);
    }

    // =====================================================================
    // Housing Rules
    // =====================================================================
    match /housings/{housingId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isResourceOwner(resource.data) && request.resource.data.userId == resource.data.userId;
      allow delete: if isResourceOwner(resource.data);
    }
    
    // =====================================================================
    // Reels Rules
    // =====================================================================
    match /reels/{reelId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && (
                      (isOwner(resource.data.userId)) ||
                      (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'comments']))
                    );
      allow delete: if isResourceOwner(resource.data);
    }

    // =====================================================================
    // Carpooling Rules
    // =====================================================================
    match /carpoolings/{carpoolingId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.driverId == request.auth.uid;
      allow update: if (isSignedIn() && request.auth.uid == resource.data.driverId) ||
                      (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasAll(['seatsAvailable', 'passengerIds']) && request.resource.data.diff(resource.data).affectedKeys().size() == 2);
      allow delete: if isOwner(resource.data.driverId);

      match /carpool_bookings/{carpoolBookingId} {
        allow get: if isOwner(resource.data.passengerId) || isDriver(carpoolingId);
        allow list: if isDriver(carpoolingId);
        allow create: if isSignedIn(); // Simplified for transaction, client logic is the guard.
        allow update: if isOwner(resource.data.passengerId) || isDriver(carpoolingId);
        allow delete: if isOwner(resource.data.passengerId);
      }
    }

    // =====================================================================
    // Tutoring Rules
    // =====================================================================
    match /tutorings/{tutoringId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.tutorId == request.auth.uid;
      allow update: if (isOwner(resource.data.tutorId) && request.resource.data.tutorId == resource.data.tutorId) || 
                      (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasAll(['rating', 'totalReviews']));
      allow delete: if isOwner(resource.data.tutorId);
    }
    
    match /tutoring_reviews/{tutoringReviewId} {
      allow get: if true;
      allow list: if request.query.keys().hasOnly(['tutoringId', 'orderBy', 'limit']);
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.studentId);
    }

    // =====================================================================
    // Event Rules
    // =====================================================================
    match /events/{eventId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.organizerId == request.auth.uid;
      allow update: if isOwner(resource.data.organizerId) || 
                      (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attendeeIds']));
      allow delete: if isOwner(resource.data.organizerId);
    }

    match /event_attendees/{eventAttendeeId} {
      allow get: if isOwner(resource.data.userId) || isEventOrganizer(resource.data.eventId);
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isOwner(resource.data.userId);
    }
    
    // =====================================================================
    // Social (Posts) Rules
    // =====================================================================
    match /posts/{postId} {
      allow list, get: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow update: if isSignedIn() && (
                      (isOwner(resource.data.userId)) ||
                      (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'comments']))
                    );
      allow delete: if isResourceOwner(resource.data);
    }
    
    // =====================================================================
    // Conversation & Message Rules
    // =====================================================================
    match /conversations/{conversationId} {
      allow list: if isSignedIn();
      allow read, update, delete: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participantIds;
      
      match /messages/{messageId} {
        allow list, get: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
        allow create: if isSignedIn() && request.auth.uid == request.resource.data.senderId && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
        allow delete: if isSignedIn() && request.auth.uid == resource.data.senderId;
      }
    }

    // =====================================================================
    // DÃ©fi Rules
    // =====================================================================
    match /challenges/{challengeId} {
      allow get: if true;
      allow list: if isSignedIn();
      allow create: if isSignedIn() && (isRole(request.auth.uid, 'admin') || isRole(request.auth.uid, 'institution'));
      allow update, delete: if isSignedIn() && (isRole(request.auth.uid, 'admin') || (isRole(request.auth.uid, 'institution') && isChallengeCreator(challengeId)));

      match /submissions/{submissionId} {
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow get, list: if isSignedIn() && (isOwner(request.resource.data.userId) || isChallengeCreator(challengeId) || isRole(request.auth.uid, 'admin'));
        allow update: if isSignedIn() && (isChallengeCreator(challengeId) || isRole(request.auth.uid, 'admin'));
        allow delete: if isSignedIn() && (isOwner(request.resource.data.userId) || isChallengeCreator(challengeId) || isRole(request.auth.uid, 'admin'));
      }
    }
  }
}
