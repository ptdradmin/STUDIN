
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    // ============================================
    // USERS - Allow registration and profile management
    // ============================================
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      // CRITICAL: Allow user creation during registration
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
      // User favorites subcollection
      match /favorites/{favoriteId} {
        allow read, write: if isOwner(userId);
      }
    }
    // ============================================
    // INSTITUTIONS - Allow registration and profile management
    // ============================================
    match /institutions/{institutionId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      // CRITICAL: Allow institution creation during registration
      allow create: if isSignedIn() && request.auth.uid == institutionId;
      allow update: if isOwner(institutionId);
      allow delete: if isOwner(institutionId);
    }
    // ============================================
    // POSTS - Public read, authenticated write
    // ============================================
    match /posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }
    // ============================================
    // HOUSINGS - Public read, owner write
    // ============================================
    match /housings/{housingId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }
    // ============================================
    // CARPOOLINGS - Public read, driver write
    // ============================================
    match /carpoolings/{carpoolId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid == resource.data.driverId;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.driverId;
    }
    // ============================================
    // TUTORINGS - Public read, tutor write
    // ============================================
    match /tutorings/{tutoringId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid == resource.data.tutorId;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.tutorId;
    }
    // ============================================
    // EVENTS - Public read, organizer write
    // ============================================
    match /events/{eventId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid == resource.data.organizerId;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.organizerId;
    }
    // ============================================
    // BOOKS - Public read, owner write
    // ============================================
    match /books/{bookId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }
    // ============================================
    // MESSAGES - Private between sender and receiver
    // ============================================
    match /messages/{messageId} {
      allow read: if isSignedIn() && 
        (request.auth.uid == resource.data.senderId || 
         request.auth.uid == resource.data.receiverId);
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.senderId;
      allow update, delete: if false;
    }
    // ============================================
    // NOTIFICATIONS - User can read their own
    // ============================================
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }
  }
}
